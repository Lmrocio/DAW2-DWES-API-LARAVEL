{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Recetas - Laravel 12",
    "version": "1.0.0",
    "description": "API REST para gestión de recetas con ingredientes, likes y comentarios. Proyecto educativo DAW - DWES.\n\nCaracterísticas:\n- Autenticación con Laravel Sanctum\n- CRUD completo de recetas\n- Gestión de ingredientes\n- Sistema de likes\n- Sistema de comentarios\n- Subida de imágenes\n- Filtros avanzados",
    "contact": {
      "name": "Soporte API",
      "email": "soporte@recetas-api.local"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost/api",
      "description": "Servidor de desarrollo local"
    },
    {
      "url": "http://localhost:8000/api",
      "description": "Servidor de desarrollo local (puerto 8000)"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ingresa el token de Sanctum. Ejemplo: 1|abcdefghijklmnopqrstuvwxyz"
      }
    }
  },
  "tags": [
    {
      "name": "Autenticación",
      "description": "Endpoints de registro, login y logout"
    },
    {
      "name": "Recetas",
      "description": "CRUD de recetas (Create, Read, Update, Delete)"
    },
    {
      "name": "Ingredientes",
      "description": "Gestión de ingredientes de una receta"
    },
    {
      "name": "Likes",
      "description": "Sistema de likes en recetas"
    },
    {
      "name": "Comentarios",
      "description": "Sistema de comentarios en recetas"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Autenticación"],
        "summary": "Registrar un nuevo usuario",
        "description": "Crea una nueva cuenta de usuario y devuelve un token de autenticación",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "password_confirmation"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Juan Pérez"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "juan@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password123"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "format": "password",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "name": {"type": "string"},
                        "email": {"type": "string"}
                      }
                    },
                    "token": {"type": "string", "example": "1|abcdefghijklmnopqrstuvwxyz"}
                  }
                }
              }
            }
          },
          "422": {
            "description": "Error de validación"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Autenticación"],
        "summary": "Iniciar sesión",
        "description": "Autentica un usuario con email y contraseña",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "admin@demo.local"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso"
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    },
    "/recetas": {
      "get": {
        "tags": ["Recetas"],
        "summary": "Listar recetas",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Búsqueda en título y descripción",
            "schema": {"type": "string"}
          },
          {
            "name": "ingrediente",
            "in": "query",
            "description": "Filtrar por ingrediente",
            "schema": {"type": "string"}
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Ordenar por (popular, titulo, created_at)",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de recetas obtenida"
          },
          "401": {
            "description": "No autenticado"
          }
        }
      },
      "post": {
        "tags": ["Recetas"],
        "summary": "Crear receta",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["titulo", "descripcion", "instrucciones"],
                "properties": {
                  "titulo": {"type": "string"},
                  "descripcion": {"type": "string"},
                  "instrucciones": {"type": "string"},
                  "imagen": {"type": "string", "format": "binary"}
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Receta creada"
          },
          "401": {
            "description": "No autenticado"
          }
        }
      }
    },
    "/recetas/{id}": {
      "get": {
        "tags": ["Recetas"],
        "summary": "Ver receta",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Receta obtenida"
          },
          "404": {
            "description": "Receta no encontrada"
          }
        }
      },
      "put": {
        "tags": ["Recetas"],
        "summary": "Actualizar receta",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Receta actualizada"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      },
      "delete": {
        "tags": ["Recetas"],
        "summary": "Eliminar receta",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Receta eliminada"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      }
    },
    "/recetas/{receta}/ingredientes": {
      "get": {
        "tags": ["Ingredientes"],
        "summary": "Listar ingredientes",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Ingredientes obtenidos"
          }
        }
      },
      "post": {
        "tags": ["Ingredientes"],
        "summary": "Agregar ingrediente",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nombre", "cantidad", "unidad"],
                "properties": {
                  "nombre": {"type": "string"},
                  "cantidad": {"type": "string"},
                  "unidad": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ingrediente creado"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      }
    },
    "/ingredientes/{id}": {
      "get": {
        "tags": ["Ingredientes"],
        "summary": "Ver ingrediente",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Ingrediente obtenido"
          }
        }
      },
      "put": {
        "tags": ["Ingredientes"],
        "summary": "Actualizar ingrediente",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Ingrediente actualizado"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      },
      "delete": {
        "tags": ["Ingredientes"],
        "summary": "Eliminar ingrediente",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Ingrediente eliminado"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      }
    },
    "/recetas/{receta}/like": {
      "post": {
        "tags": ["Likes"],
        "summary": "Dar/quitar like (toggle)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "201": {
            "description": "Like añadido"
          },
          "200": {
            "description": "Like eliminado"
          }
        }
      }
    },
    "/recetas/{receta}/likes": {
      "get": {
        "tags": ["Likes"],
        "summary": "Listar usuarios que dieron like",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de likes"
          }
        }
      }
    },
    "/recetas/{receta}/likes/count": {
      "get": {
        "tags": ["Likes"],
        "summary": "Obtener contador de likes",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Contador de likes"
          }
        }
      }
    },
    "/recetas/{receta}/comentarios": {
      "get": {
        "tags": ["Comentarios"],
        "summary": "Listar comentarios",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Comentarios obtenidos"
          }
        }
      },
      "post": {
        "tags": ["Comentarios"],
        "summary": "Crear comentario",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "receta",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["texto"],
                "properties": {
                  "texto": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comentario creado"
          }
        }
      }
    },
    "/comentarios/{id}": {
      "get": {
        "tags": ["Comentarios"],
        "summary": "Ver comentario",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Comentario obtenido"
          }
        }
      },
      "put": {
        "tags": ["Comentarios"],
        "summary": "Actualizar comentario",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Comentario actualizado"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      },
      "delete": {
        "tags": ["Comentarios"],
        "summary": "Eliminar comentario",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Comentario eliminado"
          },
          "403": {
            "description": "No autorizado"
          }
        }
      }
    }
  }
}
